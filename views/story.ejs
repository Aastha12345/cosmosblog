<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <title>Story</title>

    <style>
        label{
            padding-top:10px;
        }
        .inputfull {
            width: 100%;
            padding: 5px;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }
        input:focus {
            border-color:grey;
            outline:none;
        }
    </style>

</head>


<body style="background-color:#f0f0f0">

    <div class="container text-left" style="background-color:white">

        <p style="background-color:red;">
            <%= typeof msg !='undefined'?msg:'' %>
        </p>

        <h3>    MY STORY      </h3>        
        
        <form action="/story" method="POST" enctype="multipart/form-data">
            <label for="title">Title</label>
            <input name="title" class="inputfull"></input>

            <label for="myImage">Image:</label>
            <input name="myImage" class="inputfull" type="file">
    
            <label for="description">Description</label>
            <textarea rows="5" cols="100" class="inputfull" name="description"></textarea>
            
            <div>
            <a><button class="btn btn-primary">SAVE</button></a>
            </div>
        </form>
    </div>

</body>
</html>

<%- include('partials/footer.ejs') %>